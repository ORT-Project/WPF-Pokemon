<Window x:Class="WPF_Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Gestion des Pokémons" Width="150" Height="40" Margin="0,0,0,10" Click="OnClickGoToPagePokemon"/>
            <Button Content="Gestion des utilisateurs" Width="150" Height="40" Margin="0,0,0,10" Click="OnClickGoToPageUser"/>
            <Button Content="Générer un Pokémon" Width="150" Height="40" Click="OnClickGeneratePokemon"/>
        </StackPanel>
    </Grid>
</Window>
